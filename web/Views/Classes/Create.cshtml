@using web.Extensions
@using DAL.Models
@model Class
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Add ClassRoom";
    ViewBag.Action = "Classes";

    string error = (string)ViewBag.error;
}
<style>
    .top-right {
        font-size: .65rem !important;
    }
</style>

<div class="padding">
    <h2>@ViewBag.Title
    
        <span class="pull-right top-right">
            <b>N.B</b> You can allocate a unit to this room later after adding it.
        </span>
    </h2>

    <div class="box p-3">
        <form role="form" id="newClassForm">
            <div class="form-group">
                <label>Day of Week</label>
                @Html.DropDownListFor(x => x.DayOfWeek, Methods.DaysOfTheWeeks(), new { @class = "form-control",@id="DayOfWeek",required=true })
            </div>
            <div class="form-group">
                <label>Start Time</label>
                <div class="bfh-timepicker" data-mode="12h" icon="fa fa-clock" id="StartTime">
                </div>
            </div>
            <div class="form-group">
                <label>End Time</label>
                <div class="bfh-timepicker" data-mode="12h" icon="fa fa-clock" id="EndTime">
                </div>
            </div>
            <div class="form-group">
                <label>Room <i>(classroom in the university)</i></label>
                @Html.TextBoxFor(x => x.Room, new { @type = "text", @class = "form-control",@id="Room",required=true })
            </div>
            <br />
            <div class="form-group">
                <a href="/classes" class="btn btn-default">Close</a>
                <button type="submit" class="btn btn-danger" id="classSubmitBtn">Submit</button>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function (e) {
        var err = '@error';

        console.log(err);

        if (err) {
            error(err);
        }
    })
</script>