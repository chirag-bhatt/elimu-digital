@using DAL.Models
@using DAL.Extensions
@using Services
@{ 
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Dashboard";

    var lecturers = (IList<Lecturer>)ViewBag.lecturers;
    var students = (IList<Student>)ViewBag.students;
}

<div class="padding">

    @{
        if (User.Role() == "Administrator")
        {
            Html.RenderPartial("Dashboard/_Summary");
        }
    }

    @{
        if (User.Role() == "Unknown")
        {
            <div>
                <center>
                    <h2><i class="fa fa-frown-o"></i> Empty Profile!!</h2>
                    <p>Please complete your profile registration first to use E-Learning Pad.</p>
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#profRegModal">Get Started.</button>
                </center>
            </div>
        }
        else
        {
            if (User.Role() == "Lecturer")
            {
                <div class="row">
                    <div class="col-sm-6">
                        <div class="box">
                            <div class="box-header">
                                <h3>
                                    My Colleagues
                                </h3>
                            </div>
                            <div class="list inset">
                                @foreach (var item in lecturers)
                                {
                                    <div class="list-item" data-id="item-5">
                                        <span class="w-40 avatar circle blue-grey">
                                            <img alt="." src="@Url.Content(item.Profile.PhotoUrl)">
                                        </span>
                                        <div class="list-body">
                                            <a class="item-title _500" href="#">@item.Profile.FullNames</a>
                                            <div class="item-except text-sm text-muted h-1x">
                                                Lecturer
                                            </div>
                                            <div class="item-tag tag">
                                                <span class="item-date text-xs text-muted">@item.Timestamp.ToString()</span>
                                            </div>
                                        </div>
                                        <div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="box">
                            <div class="box-header">
                                <h3>
                                    My Students
                                </h3>
                            </div>
                            <div class="list inset">
                                @foreach (var item in students)
                                {
                                    <div class="list-item" data-id="item-11">
                                        <span class="avatar w-32">
                                            <img alt="." class="w-40 circle" src="@Url.Content(item.Profile.PhotoUrl)" />
                                        </span>
                                        <div class="list-body">
                                            <a class="item-title _500" href="#">@item.Profile.FullNames</a>
                                            <div class="item-except text-sm text-muted h-1x">
                                                Student
                                            </div>
                                            <div class="item-tag tag hide"></div>
                                        </div>
                                        <div>
                                            <div class="item-action dropdown">
                                                <a class="text-muted" data-toggle="dropdown" href="/students/@item.Id/@Extensions.GenerateSlug(item?.Profile.FullNames)"><i class="fa fa-fw fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right text-color" role="menu">
                                                    <a class="dropdown-item"><i class="fa fa-tag"></i> Action</a> <a class="dropdown-item"><i class="fa fa-pencil"></i> Another action</a> <a class="dropdown-item"><i class="fa fa-reply"></i> Something else here</a>
                                                    <div class="dropdown-divider"></div><a class="dropdown-item"><i class="fa fa-ellipsis-h"></i> Separated link</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
            else if (User.Role() == "Student")
            {
                <div class="jumbotron">
                    <h4>Welcome student to @Extensions.Uni</h4>

                    <p>
                        Start pursuing your goals by equipping yourself with the relevant skills
                        required with our world-class courses.
                    </p>

                    <a class="btn btn-danger" href="/courses/enrollment">Enrollments</a>
                </div>
            }
            else if(User.Role() == "Administrator")
            {
                 <div class="row">
                    <div class="col-sm-6">
                        <div class="box">
                            <div class="box-header">
                                <h3>
                                    Lecturers
                                </h3>
                            </div>
                            <div class="list inset">
                                @foreach (var item in lecturers)
                                {
                                    <div class="list-item" data-id="item-5">
                                        <span class="w-40 avatar circle blue-grey">
                                            <img alt="." src="@Url.Content(item.Profile.PhotoUrl)">
                                        </span>
                                        <div class="list-body">
                                            <a class="item-title _500" href="#">@item.Profile.FullNames</a>
                                            <div class="item-except text-sm text-muted h-1x">
                                                Lecturer
                                            </div>
                                            <div class="item-tag tag">
                                                <span class="item-date text-xs text-muted">@item.Timestamp.ToString()</span>
                                            </div>
                                        </div>
                                        <div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="box">
                            <div class="box-header">
                                <h3>
                                    Students
                                </h3>
                            </div>
                            <div class="list inset">
                                @foreach (var item in students)
                                {
                                    <div class="list-item" data-id="item-11">
                                        <span class="avatar w-32">
                                            <img alt="." class="w-40 circle" src="@Url.Content(item.Profile.PhotoUrl)" />
                                        </span>
                                        <div class="list-body">
                                            <a class="item-title _500" href="#">@item.Profile.FullNames</a>
                                            <div class="item-except text-sm text-muted h-1x">
                                                Student
                                            </div>
                                            <div class="item-tag tag hide"></div>
                                        </div>
                                        <div>
                                            <div class="item-action dropdown">
                                                <a class="text-muted" data-toggle="dropdown" href="/students/@item.Id/@Extensions.GenerateSlug(item?.Profile.FullNames)"><i class="fa fa-fw fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right text-color" role="menu">
                                                    <a class="dropdown-item"><i class="fa fa-tag"></i> Action</a> <a class="dropdown-item"><i class="fa fa-pencil"></i> Another action</a> <a class="dropdown-item"><i class="fa fa-reply"></i> Something else here</a>
                                                    <div class="dropdown-divider"></div><a class="dropdown-item"><i class="fa fa-ellipsis-h"></i> Separated link</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>


            }

        }
    }
</div>


