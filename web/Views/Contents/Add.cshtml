@using DAL.Models
@{ 
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

    ViewBag.Title = "Upload Content";
    ViewBag.Action = "Contents";
    var unit = (Unit)ViewBag.unit;
}
<style>
    #ContentFile{
        opacity:0.1;
        height:.1px;
        position:absolute;
    }
    .ContentFileLabel{
        min-height:48px;
    }
</style>
<form class="padding" 
      role="form" 
      id="UploadForm" 
      method="post" 
      action="/contents/add/unit/@unit.Id"
      enctype="multipart/form-data">
    <h4>
        Upload New Content

        <span class="pull-right top-right">
            <i class="fa fa-umbrella"></i> @unit.Name
        </span>
    </h4>

    <div class="box p-3">
        <div class="row">
            <span class="col-md-8">
                Add <b>documents, videos or audio</b> recording to this unit with additional <b>metadata</b>
                to help students of this unit be able to search and find it and provide
                further instructions on how to consume the content.
            </span>
        </div>
        <br />
        <div class="form-group">
            <strong>
                Select a file<span class="text-danger">*</span>
            </strong>
            <label class="form-control col-md-6 ContentFileLabel" for="ContentFile">
                <i class="FileName"></i>
                <span for="ContentFile" class="btn btn-primary col-md-3 pull-right">BROWSE</span>
            </label>
            <input required type="file" name="File" id="ContentFile" class="form-control col-md-6"  />
        </div>

        <div id="metadata">
            <div class="form-group">
                <strong>Title<span class="text-danger">*</span></strong>
                <input type="text" name="Title" id="Title" required placeholder="e.g Stock Market Logic" class="form-control col-md-7" />
            </div>

            <div class="form-group">
                <strong>Description<span class="text-danger">*</span></strong>
                <p class="col-md-7">
                    (<i>
                        Additional instructions for readers either describing the content or
                        how to consume the content.
                    </i>)
                </p>
                <textarea id="Description" name="Desc" title="Description" required class="form-control col-md-7" rows="4"></textarea>
            </div>
        </div>


    </div>
    <div class="form-group">
        <span class="pull-right">
            <button class="btn btn-default">Cancel</button>
            <button class="btn btn-danger"><i class="fa fa-upload"></i> Upload</button>
        </span>
    </div>
</form>

