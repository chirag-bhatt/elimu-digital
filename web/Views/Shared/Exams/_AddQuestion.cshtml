
<div class="modal fade" data-backdrop="true" id="addQuestionModal">
    <div class="modal-dialog animate" id="animate">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span>
                        <i class="fa fa-fw fa-question-circle"></i>  Add Question
                    </span>
                </h5>
            </div>
            <div class="modal-body p-lg">
                <div id="setExamUnitChooser">
                    <div class="form-group">
                        <label><b>Question No. {{questions.length + 1}} <span class="text-danger">*</span></b></label>
                        <input type="text" placeholder="type here.." class="form-control" ng-model="question.Text" required />
                    </div>
                    <div class="form-group">
                        <label><b>Marks<span class="text-danger">*</span></b></label>
                        <input type="text" class="form-control" placeholder="e.g 30" ng-model="question.Marks" />
                    </div>

                    <form ng-submit="onAddAnswer()" class="form-row">
                        <div class="col-md-12">
                            <label for="inlineFormInput">Add answer option No. {{question.Answers.length + 1}}</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control mb-2"
                                   id="inlineFormInput"
                                   required
                                   ng-model="answer.Text"
                                   placeholder="Option Answer">
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary btn-sm mb-2">Add</button>
                        </div>
                    </form>

                    <br />
                    <hr />
                    <p><i>Answer options(Tick the correct answers)</i></p>
                    <div id="questionAnswers">
                        <ul style="list-style-type:lower-latin">
                            <li ng-repeat="ans in question.Answers">
                                <p>
                                    <input type="checkbox" ng-model="ans.IsCorrect" />
                                    {{ans.Text}}
                                    <span ng-show="ans.IsCorrect" class="pull-right badge badge-success">
                                        <i class="fa fa-check-circle"></i> correct
                                    </span>
                                </p>
                                
                            </li>
                        </ul>
                        <center ng-show="question.Answers.length < 1">
                            <span>No answers added</span>
                        </center>
                    </div>
                    <br />
                    <div class="modal-footer">
                        <button class="btn btn-default" type="button" ng-click="onExitQuestion()">Exit</button>
                        <button class="btn danger p-x-md" ng-click="onSubmitQuestion()" type="submit">Submit</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

