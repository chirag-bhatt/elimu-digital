@using DAL.Extensions
@{

}
<style>
    #units-loader {
        position: absolute;
        transform: translate(20%, -140%);
    }
</style>
<div class="modal fade" data-backdrop="true" id="setExamUnitChooserModal">
    <div class="modal-dialog animate" id="animate">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span>
                        <i class="fa fa-fw fa-cube"></i>  Set Exam 
                    </span>
                </h5>
            </div>
            <div class="modal-body p-lg">
                <form id="setExamUnitChooser">
                    <div class="form-group">
                        <label>Choose unit</label>

                        <select class="form-control" name="unit" id="unitSelect" required></select>
                        <span id="units-loader" class="text-muted">
                            <i class="fa fa-refresh fa-spin"></i> fetching...
                        </span>
                    </div>
                    <div class="modal-footer">
                        <button class="btn dark-white p-x-md" data-dismiss="modal" type="button">Cancel</button>
                        <button class="btn danger p-x-md" type="submit">Submit</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script>
    $(document).ready(function (e) {
        $('#setExamUnitChooser').submit(function (e) {
            e.preventDefault();

            navigateToSetExam();
        })
    })
</script>

