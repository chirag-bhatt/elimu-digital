<style>
    #myunits-loader{
        position:absolute;
        transform:translate(20%, -140%);
    }
    .btn-default{
        color:#808080 !important;
    }
</style>
<div class="modal fade" data-backdrop="true" id="newBoardModal">
    <div class="modal-dialog animate" id="animate">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span>
                        <i class="fa fa-fw fa-comment"></i>  New Discussion Board
                    </span>
                </h5>
            </div>
            <div class="modal-body p-lg">
                <form id="newBoardForm">
                    <div class="form-group">
                        <label><b>Name <span class="text-danger">*</span></b></label>
                        <input type="text" name="name" id="boardName" required
                               class="form-control"
                               placeholder="e.g Physics discussion" />
                    </div>
                    <div class="form-group">
                        <label><b>Choose unit <span class="text-danger">*</span></b></label>

                        <select class="form-control" name="unit" id="unitSelect" required></select>
                        <span id="myunits-loader" class="text-muted">
                            <i class="fa fa-refresh fa-spin"></i> fetching...
                        </span>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-default" data-dismiss="modal" type="button">Cancel</button>
                        <button class="btn danger p-x-md" id="boardBtnSubmit" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function (e) {
        $('#newBoardForm').submit(function (e) {
            e.preventDefault();

            pushNewBoard();
        })

    })
</script>

