@using DAL.Models
@using DAL.Extensions
@using Services

@{
    if (User.Role() == "Lecturer")
    {
        var colleagues = (List<Lecturer>)ViewBag.colleagues;

        <div class="box">
            <div class="box-header">
                <h3>Colleagues</h3>
            </div>
            <div class="box-divider"></div>
            <ul class="list no-border">
                @foreach (var item in colleagues)
                {
                    <li class="list-item">
                        <a data-toggle="modal" data-target="#profViewModal" 
                           ng-click="onViewProfile('@item.Profile.Serialize()','Lecturer','@item.AccountId')"
                           >
                            <span class="w-40 avatar">
                                <img alt="..." src="@Url.Content(item.Profile.PhotoUrl)">
                                <i class="on bottom"></i>
                            </span>
                        </a>
                        <div class="list-body">
                            <div>
                                <a data-toggle="modal" data-target="#profViewModal" 
                                   ng-click="onViewProfile('@item.Profile.Serialize()','Lecturer','@item.AccountId')">
                                    @item.Profile.FullNames
                                </a>
                            </div><small class="text-muted text-ellipsis">Lecturer</small>
                        </div>
                    </li>
                }
            </ul>
        </div>

            }
            else if (User.Role() == "Student")
            {
                var mates = (List<Student>)ViewBag.mates;

                <div class="box">
                    <div class="box-header">
                        <h3>Course Mates</h3>
                    </div>
                    <div class="box-divider"></div>
                    <ul class="list no-border">
                        @foreach (var item in mates)
                        {
                            <li class="list-item">
                                <a data-toggle="modal" data-target="#profViewModal" 
                                   ng-click="onViewProfile('@item.Profile.Serialize()','Student','@item.AccountId')">
                                    <span class="w-40 avatar">
                                        <img alt="..." src="@Url.Content(item.Profile.PhotoUrl)"> 
                                        <i class="on bottom"></i>
                                    </span>
                                </a>
                                <div class="list-body">
                                    <div>
                                        <a data-toggle="modal" data-target="#profViewModal" 
                                           ng-click="onViewProfile('@item.Profile.Serialize()','Student','@item.AccountId')">
                                            @item.Profile.FullNames
                                        </a>
                                    </div><small class="text-muted text-ellipsis">@item.Course.Name</small>
                                </div>
                            </li>
                        }
                    </ul>
                </div>


    }
}
